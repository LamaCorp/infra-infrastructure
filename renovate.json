{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "argocd": {
    "managerFilePatterns": [
      "/^k8s/.+\\.ya?ml/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/.*ya?ml$/"
      ],
      "matchStrings": [
        ".*docker_repository:\\s*(?<depName>.*?)\\s*.*docker_tag:\\s*(?<currentValue>.*?)\\s"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/^k8s/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\n *repository: (?<depName>.+?)\n *tag: (?<currentValue>.+?)",
        "image: (?<depName>[^:]+?):(?<currentValue>.*?)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k3s-io/k3s",
      "managerFilePatterns": [
        "/^group_vars/k3s\\.yml$/"
      ],
      "matchStrings": [
        "k3s_release_version: (?<currentValue>.*?)\\n"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "badaix/snapcast",
      "fileMatch": [
        "^roles/snapcast/defaults/main\\.yml$"
      ],
      "matchStrings": [
        "snapcast_version: (?<currentValue>.*?)\\n"
      ]
    }
  ],
  "extends": [
    "local>lama-corp/infra/services/renovate//renovate-presets.json"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^k8s/.+\\.ya?ml$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/^k8s/.+/kustomization\\.ya?ml$/"
    ]
  }
}
